<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.lcd.vn.capnhatdanhba">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">
        <activity android:name="android.vn.lcd.activity.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="android.vn.lcd.activity.ListContactActivity"
            android:theme="@style/AppTheme" android:screenOrientation="portrait"/>

        <activity android:name="android.vn.lcd.activity.ResultActivity"
            android:theme="@style/AppTheme" android:screenOrientation="portrait"/>

    </application>

</manifest>